extends /fragments/gallery.jade

block append head-scripts
    script(src='/scripts/albums.js')

block sidebar
    #side-fantom
    #sidebar
        #info-pane
            p Описание профиля
            p Дата регистрации: 00.00.2020
        #btn-pane
            .btn Редактировать профиль
            .btn Добавить альбом

- var albumItems = #{albums}
block content
    #albums-list
        each item in albumItems
            .album-block
                .album-name= item.name